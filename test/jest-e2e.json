  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@gm50x/common/(.*)": "<rootDir>/../libs/common/src/$1",
    "@gm50x/common": "<rootDir>/../libs/common/src",
    "@gm50x/environment/(.*)": "<rootDir>/../libs/environment/src/$1",
    "@gm50x/environment": "<rootDir>/../libs/environment/src",
    "@gm50x/database/(.*)": "<rootDir>/../libs/databases/src/$1",
    "@gm50x/database": "<rootDir>/../libs/databases/src"
  }
}
